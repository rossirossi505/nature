{
  "name": "nexter",
  "version": "1.0.0",
  "description": "Landing page for nexter",
  "main": "index.js",
  "scripts": {
    "start1": "webpack-dev-server --hot --open",
    "build": "webpack --config webpack.config.js --mode development",
    "watch:sass": "node-sass ./public/sass/main.scss ./public/css/style.css -w",
    "devserver": "live-server --browser=firefox",
    "start2": "nodemon src/app.js",
    "start": "npm-run-all --parallel start2 start1 watch:sass",
    "compile:sass": "node-sass ./public/sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Naz",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.2.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "node-sass": "^6.0.0",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1"
  },
  "dependencies": {
    "express": "^4.17.1",
    "nodemon": "^2.0.19"
  }
}
